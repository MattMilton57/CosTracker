<%= form_for @production do |p| %>
    <%= p.label :title, "Play Title: "%>
    <%= p.text_field :title%> <br>
    <%= p.label :theatre_id, "Theatre: " %> 
    <%= p.collection_select :theatre_id, @theatres, :id, :name, include_blank: true %><br>
    <%= p.submit %>
    <% end %>

    <% if flash[:notice]%>
    <%= flash[:notice] %>
    <%end%>
